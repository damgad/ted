# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                          controllers.Application.index
GET     /tasks/schedule             controllers.Application.newTask(class: String)
GET     /setthreads                 controllers.Application.setthreads(class: String)
GET     /tasks/count-scheduled      controllers.Application.scheduled
GET     /tasks/count-running        controllers.Application.running

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
